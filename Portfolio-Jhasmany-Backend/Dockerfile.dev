# Use Node.js LTS version
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install curl for healthcheck
RUN apk add --no-cache curl

# Copy package files
COPY package*.json ./

# Install all dependencies (including devDependencies)
RUN npm install

# Expose port
EXPOSE 3001

# Start the application in development mode
CMD ["npm", "run", "dev"]
